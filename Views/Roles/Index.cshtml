@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Role Page";
}
<h1><a asp-action="Create">Create Role</a></h1>
<div class="text-center">
    <table class="table table-stripped table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Members</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count()==0)
            {
                <tr>
                    <td colspan="5" class="text-center">No Roles</td>
                </tr>
            }
            else
            {
             @foreach (var item in Model)
            {
                <tr>
                    <th>@item.Id</th>
                    <th>@item.Name</th>
                    <th>members</th>
                    <th><a asp-action="Edit" asp-route-id="@item.Id">Edit</a></th>
                    <th><a asp-action="Delete" asp-route-id="@item.Id">Delete</a></th>
                </tr>
            }   
            }
            
        </tbody>
    </table>
</div>
